@model BrandNavigationModel
<div id="block-brand-navigation" class="block block-brand-navigation">
    <h2 class="h5 d-block">
        <strong>@Loc["Brands"]</strong>
    </h2>
    <div class="viewBox">
        <ul>
            @foreach (var brand in Model.Brands)
            {
                <li class="@(brand.IsActive ? "active" : "inactive")">
                    <a href="@Url.RouteUrl("Brand", new { brand.SeName })">
                        @if (!string.IsNullOrEmpty(brand.Icon))
                        {
                            <span class="category-icon @brand.Icon"></span>
                        }
                        @brand.Name
                    </a>
                </li>
            }
        </ul>
        @if (Model.TotalBrands > Model.Brands.Count)
        {
            <div class="view-all mb-1">
                <a class="btn btn-sm btn-outline-info" href="@Url.RouteUrl("BrandList")">@Loc["Brands.ViewAll"]</a>
            </div>
        }
    </div>
</div>